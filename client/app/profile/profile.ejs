<!--profile.ejs -->
<!doctype html>
<html>
<head>
    <title>Node Authentication</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body        { padding-top:80px; word-wrap:break-word; }
    </style>
</head>
<body>
<div class="container">
<div class="col-sm-6 col-sm-offset-3">
    <img src="images/logo.jpg" class="img-responsive">
</div>
</div>

<div class="container">
    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Profile Page</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">
        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-user"></span> Links</h3>
                <div class="list-group">
                  <a href="/" class="list-group-item list-group-item-action">Home</a>
                  <a href="/profile" class="list-group-item list-group-item-action">This page</a>
                  <a href="/create" class="list-group-item list-group-item-action">Create a character</a>
                  <a href="#" class="list-group-item list-group-item-action" disabled>DnD 5e API</a>
                  <a href="#" class="list-group-item list-group-item-action" disabled>Show Characters</a>
                </div>
            </div>
        </div>
        <% if (user.characters) { %>
        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-user"></span> Character</h3>

                    <p>
                        <strong>Name</strong>: <%= character.name %><br>
                        <strong>Class</strong>: <%= character.class %><br>
                        <strong>Race</strong>: <%= character.race %><br>
                        <strong>Level</strong>: <%= character.level %><br>
                    </p>

            </div>
        </div>
        <% } %>
        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-user"></span> Local</h3>

                    <p>
                        <strong>id</strong>: <%= user._id %><br>
                        <strong>email</strong>: <%= user.local.email %><br>
                        <strong>date</strong>: <%= user.date %><br>
                    </p>

            </div>
        </div>
    </div>

</div>
</body>
</html>
